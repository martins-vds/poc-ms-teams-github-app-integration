{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "commonjs",
    "skipLibCheck": true,

    /* Bundler mode */
    "resolveJsonModule": true,

    /* Linting */
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./",
    "sourceMap": true,
    "incremental": true,
    "esModuleInterop": true,
  },
  "include": ["src"],  
}
